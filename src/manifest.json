{
  "name": "Beveriser",
  "version": "1.0",
  "description": "This extension will remind you to drink.",

  "manifest_version": 2,

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
 
  "icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png" 
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "notifications",
    "activeTab",
    "storage"
  ]
}